    <RelativeLayout          android:id="@+id/ret_cardv" android:layout_width="0dp"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintLeft_toRightOf="@+id/guideline_xleft"
                     app:layout_constraintRight_toLeftOf="@+id/guideline_xright"

                     android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:contentPadding="4dp"
            android:layout_margin="10dp"
app:cardBackgroundColor="@color/ccrbGrey"


            android:layout_width="match_parent"

            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout

                xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content">



            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_top_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.12" />


            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_x_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.01" />
            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_x_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.98" />

            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_x_content_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.93" />
            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_x_star_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.70" />


            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_guideline_horizontal_60"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55"/>
            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_v_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4"

            />
            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_h_75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65"

            />


            <android.support.constraint.Guideline
                    android:id="@+id/card_guideline_h_78"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.70"

            />




           
            <com.jpndev.utilitylibrary.CustomFontTextView
                    android:text=" "
                    android:layout_width="0dp"
                    android:gravity="left"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp16"
                    android:layout_marginTop="10dp"
                    app:fontString="@string/ubuntu_bold"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/card_guideline_v_center"
                    app:layout_constraintRight_toLeftOf="@+id/card_guideline_x_content_right"
                    android:layout_height="wrap_content"
                    android:id="@+id/topic_ctxv" />

            <com.jpndev.utilitylibrary.CustomFontTextView
                    android:text="upto_ccrb"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:textSize="@dimen/sp12"
                    android:layout_marginTop="8dp"
                    app:fontString="@string/ubuntu_regular"
                    android:textColor="@color/ccrbGreen"
                    app:layout_constraintLeft_toRightOf="@+id/card_guideline_v_center"
                    app:layout_constraintRight_toLeftOf="@+id/card_guideline_x_content_right"
                    app:layout_constraintTop_toBottomOf="@+id/topic_ctxv"
                    android:layout_height="wrap_content"
                    android:id="@+id/des_ctxv" />
        

















        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
    <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/ret_cardv"
            android:id="@+id/bottom_view"
            android:visibility="gone"
            android:layout_height="50dp"/>
    <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/ret_cardv"
            android:background="@color/transparent"
            android:layout_height="10dp"/>
</android.support.constraint.ConstraintLayout>
